- extends 'base.html'
- load i18n
- load staticfiles

- block extra_head
- endblock

- block content
    .row.arriba
        .col-md-4
            a#logo_barra(href="{% url 'home' %}")
                img#circles_ani(src="/static/images/logo_circles.png")
                img#equallo(src="/static/images/logo_sin_circle.png")
        .col-md-8
            .texto-header
                h1 {% trans 'Reset your password' %}
                p For the Equallo team is important that you can access all of your information in time. Please use this space to reset your password if you forgot it.
    - if error
        .row
            .col-md-12
                .alert.alert-danger
                    i.fa.fa-times-circle
                    |  {{ error }}
    - elif message
        .row
            .col-md-12
                .alert.alert-info
                    i.fa.fa-thumbs-up
                    |  {{ message }}
    .row
        .col-md-12
            .panel.panel-default
                .panel-heading
                    h3.panel-title {% trans 'Reset your password' %}
                .panel-body
                    form.form-horizontal(role="form", method="post", action="{% url 'reset_password' %}")
                        - csrf_token
                        .form-group
                            label.col-md-3.control-label(for="input_email") * {{ form.email.label }}:
                            .col-md-6
                                {{ form.email }}
                        .form-group
                            label.col-md-3.control-label(for="input_password") * {{ form.password.label }}:
                            .col-md-6
                                {{ form.password }}
                        .form-group
                            label.col-md-3.control-label(for="input_confirm_password") * {{ form.confirm_password.label }}:
                            .col-md-6
                                {{ form.confirm_password }}
                        .form-group
                            .col-md-6.col-md-offset-3
                                button.btn.btn-default(type="submit") {% trans 'Reset password' %}

